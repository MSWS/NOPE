		</repository>
		<repository>
			<id>placeholderapi</id>
			<url>https://repo.extendedclip.com/content/repositories/placeholderapi/</url>
		</repository>
		<repository>
			<id>spicord-repo</id>
			<url>https://repo.mcdb.eu/</url>
		</repository>
		<repository>
